import "./App.css";
import { useState } from "react";

function App() {
  const [color, setColor] = useState("white");

  return (
    <div
      className="w-full h-screen duration-200"
      style={{ backgroundColor: color }}
    >
      <div className="fixed flex flex-wrap mx-4 justify-center top-12 inset-x-0 px-2">
        <div className="flex flex-wrap justify-center border-black gap-8 shadow-lg bg-white rounded-lg px-3 py-2">
          <button
          onClick={()=>setColor("red")}
            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "red" }}
          >
            Red
          </button>
          <button
                    onClick={()=>setColor("green")}

            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "green" }}
          >
            green
          </button>
          <button
                    onClick={()=>setColor("blue")}

            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "blue" }}
          >
            blue
          </button>
          <button
                    onClick={()=>setColor("orange")}

            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "orange" }}
          >
            orange
          </button>
          <button
                    onClick={()=>setColor("teal")}

            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "teal" }}
          >
            teal
          </button>
          <button
                    onClick={()=>setColor("aqua")}

            className="outline-none px-4 py-1 rounded-lg  text-white shadow-md"
            style={{ backgroundColor: "aqua" }}
          >
            aqua
          </button>
          <button
                    onClick={()=>setColor("yellow")}

            className="outline-none px-4 py-1 rounded-lg  text-black shadow-md"
            style={{ backgroundColor: "yellow" }}
          >
            yellow
          </button>
          <button
                    onClick={()=>setColor("white")}

            className="outline-none text-black px-4 py-1 rounded-lg  shadow-md"
            style={{ backgroundColor: "white" }}
          >
            White
          </button>
          <button
                    onClick={()=>setColor("black")}

            className="outline-none text-white px-4 py-1 rounded-lg  shadow-md"
            style={{ backgroundColor: "black" }}
          >
            Black
          </button>
        </div>
      </div>
    </div>
  );
}

export default App;
